include <iostream>
#include <fstream>
using namespace std;

void mostrar (int tat[], int res[],double el[],int cliente, string clie[] ,string prod[],int dwa){
    const int lit {13000};
    int lol {0}; 
    int dim {5};
    double re[dim] {};
    cout <<"Cliente "<<clie[cliente] << ": " << endl;
    while (lol < dim){
        for (int x = 0; x < dwa; x++){//
            res[x] == lol && tat[x] == cliente ? re[lol] += el[x] : 0;
        }
        if (re[lol] > lit){
            cout << "Producto: " << prod[lol] << endl;
        }
        lol++;
    }
}
int main(){
    ifstream archilec;
    archilec.open ("Datos.txt");
    if (!archilec){
        cout << "Error al abrir el archivo" << endl;
        return 1;
    }
    ifstream archiname;
    archiname.open ("Nombres.txt");
    if (!archiname){
        cout << "Error al abrir el archivo" << endl;
        return 1;
    }
    //Nombres
    const int fils {8};
    const int cols {5};
    string clie[fils];
    string prod[cols];
    int fols {0};
    for (int i = 0; i < 13; i++){
        if (i < fils){
            archiname >> clie[i];
        }else{
            archiname >> prod[fols];
            fols++;
        }
    }
    //Datos
    string aux;
    int dw{};
    while(getline(archilec,aux)){
        dw++;
    }
    archilec.close();
    archilec.open("Datos.txt");
    int filas {dw};
    int columnas {4};
    double f[dw][columnas];
    float pes ,dis;

    for (int a = 0; a < dw; a++){
        for (int b = 0; b < columnas; b++){
            archilec >> f[a][b];
        }
    }
    double re[cols] {};
    //Punto 1
    int ter[dw]; //Clientes
    int rez[dw]; //Productos
    double pex[dw];
    for (int d = 0; d < dw; d++){
        ter[d] = f[d][0];
        rez[d] = f[d][1];
        pex[d] = f[d][2];
    }
    //Punto 2
    int xqs {0};
    while (xqs < cols){
        for (int x = 0; x < dw; x++){//
            f[x][1] == xqs && f[x][0] == 1 ? re[xqs] += f[x][3] : 0;
        }
        xqs++;
    }
    int cant {0};
    for (int j = 0; j < dw; j++){
        f[j][1] == 3 ? cant++ : 0;
    }
    //Mostrar
    cout << "Listado por clientes, de los tipos de productos que superan los 13000 kg acumulados: " << endl;
    for(int w{};w<fils;w++){
        mostrar(ter,rez,pex,w,clie,prod,dw);
    }
    cout << endl;
    cout << "Listado de km recorridos por tipo de producto(ascendente): " << endl;
    //Funcion
    for (int y = 0; y < 5; ++y){
        cout << prod[y] << ": " << re[y] << endl;
    }
    cout << endl;
    cout << "Cantidad de entregas para el tipo de producto " ; 
    cout << prod[3] << ": " << cant << endl;
    archilec.close ();
    archiname.close ();
    return 0;
}
